<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/fullPhoto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="30dp"/>
    <TextView
        android:id="@+id/fullFIO"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/fullPhoto"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/fullEmail"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fullFIO"
        app:layout_constraintStart_toStartOf="parent"
        />
    <TextView
        android:id="@+id/fullBirthday"
        android:text="test"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fullEmail"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/fullAddress"
        android:layout_width="wrap_content"
        android:text="test"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/fullBirthday"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/fullNumber"
        android:layout_width="wrap_content"
        android:text="test"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/fullAddress"
        app:layout_constraintStart_toStartOf="parent"/>
    <TextView
        android:id="@+id/fullPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fullNumber"/>



</androidx.constraintlayout.widget.ConstraintLayout>