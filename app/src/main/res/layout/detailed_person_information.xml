<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/recBack"
    tools:context=".UI.DetailedPerson.DetailedPersonInformation">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="8dp"
        >

        <ImageView
            android:id="@+id/fullPhoto"
            android:background="@drawable/circle"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@id/fullFIO"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/fullNameConst"
            android:layout_width="wrap_content"
            android:text="Full name"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullPhoto"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullFIO"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:gravity="center"
            android:paddingVertical="8dp"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullNameConst" />
        <View
            android:id="@+id/dividerFIO"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullFIO"
            android:background="#3E3E3E"
            />
        <TextView
            android:id="@+id/fullGenderConst"
            android:layout_width="wrap_content"
            android:text="Gender"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerFIO"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullGender"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:clickable="true"
            android:paddingVertical="8dp"
            android:fontFamily="@font/roboto_light"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullGenderConst" />
        <View
            android:id="@+id/dividerGender"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullGender"
            android:background="#3E3E3E"
            />
        <TextView
            android:id="@+id/fullAgeConst"
            android:layout_width="wrap_content"
            android:text="Age"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerGender"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingVertical="8dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullAgeConst" />
        <View
            android:id="@+id/dividerAge"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullAge"
            android:background="#3E3E3E"
            />
        <TextView
            android:id="@+id/fullEmailConst"
            android:layout_width="wrap_content"
            android:text="Email"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerAge"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/roboto_light"
            android:paddingVertical="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullEmailConst" />

        <ImageButton
            android:id="@+id/emailForward"
            android:background="@color/recBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullEmailConst"
            android:src="@drawable/baseline_arrow_right_24"
            />

        <View
            android:id="@+id/dividerEmail"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullEmail"
            android:background="#3E3E3E"
            />
        <TextView
            android:id="@+id/fullBirthdaylConst"
            android:layout_width="wrap_content"
            android:text="Date of birth"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerEmail"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullBirthday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:fontFamily="@font/roboto_light"
            android:paddingVertical="8dp"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullBirthdaylConst" />
        <View
            android:id="@+id/dividerBirthday"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullBirthday"
            android:background="#3E3E3E"
            />
        <TextView
            android:id="@+id/fullAddresslConst"
            android:layout_width="wrap_content"
            android:text="Address"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerBirthday"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullAddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:paddingVertical="8dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullAddresslConst" />
        <ImageButton
            android:id="@+id/addressForward"
            android:background="@color/recBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullAddresslConst"
            android:src="@drawable/baseline_arrow_right_24"
            />
        <View
            android:id="@+id/dividerAddress"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullAddress"
            android:background="#3E3E3E"
            />
        <TextView
            android:id="@+id/fullPhoneConst"
            android:layout_width="wrap_content"
            android:text="Phone number"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/robotobold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/dividerAddress"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/fullNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginStart="16dp"
            android:fontFamily="@font/roboto_light"
            android:paddingVertical="8dp"
            android:text="test"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullPhoneConst" />
        <ImageButton
            android:background="@color/recBack"
            android:id="@+id/numberForward"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fullPhoneConst"
            android:src="@drawable/baseline_arrow_right_24"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>